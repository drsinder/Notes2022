
@using Syncfusion.Blazor.RichTextEditor

@if (noteFile == null)
{
    <p class="center"><em>Loading...</em></p>
}
else
{
    if (ShowChild && Model.RefId != 0)
    {
        <NotePanel NoteId="Model.RefId" ShowChild="true" IsRootNote="false" ShowButtons="false"></NotePanel>
    }
    else if (Model.RefId != 0)
    {
        <SfButton @onclick="OnClickRef" class="logbutton">Show References</SfButton>
    }


    <div class="dialogedit">
    <h3>Note Editor - @noteFile.NoteFileName - @noteFile.NoteFileTitle</h3>
                <EditForm id="createform" Model="@Model" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <strong>Subject</strong>
                    <InputText id="name" @bind-Value="Model.MySubject" class="form-control long-input" />

                    <strong>Tags</strong>
                    <InputText id="title" @bind-Value="Model.TagLine" class="form-control long-input" />
                    <strong>Director Message</strong>
                    <InputText id="title" @bind-Value="Model.DirectorMessage" class="form-control long-input" />

                    <strong>Note Body</strong>

                </EditForm>
    <SfRichTextEditor @ref="EditObj" @bind-Value="@Model.MyNote" EditorMode="EditorMode.HTML" ShowCharCount="true" Height="500" Width="950" MaxLength="100000">
        <RichTextEditorToolbarSettings @ref="ToolBarObj" Items="@Tools" Type="ToolbarType.Expand" />
    </SfRichTextEditor>


                            <br /><button type="submit" @onclick="HandleValidSubmit" class="btn btn-success btn-sm">Save</button>
                        <button type="button" @onclick="CancelEdit" class="btn btn-info btn-sm">Cancel</button>

    </div>

}

<style>
    .dialogedit {
        background-color: lightgray;
        border-style: groove;
        border-width: 6px;
        border-color: darkgray;
        color: black;
        border-radius: 8px;
    }
.long-input {
    width: 1000px;
}

</style>