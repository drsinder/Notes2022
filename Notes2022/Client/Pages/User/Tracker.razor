@page "/tracker"

@using Notes2022.Shared
@using Blazored.SessionStorage
@using Microsoft.AspNetCore.Components.Authorization
@inject HttpClient Http
@inject NavigationManager NavMan
@inject AuthenticationStateProvider AuthenticationStateProvider

<h3>Tracked Notes Files List</h3>

@if (files == null)
{
    <p class="center"><em>Loading...</em></p>
}
else
{
    <AuthorizeView>
        <Authorized>
            <table class="table">
                <thead>
                    <tr>
                        <th>Check to Follow</th>
                        <th>
                            NoteFile Name
                        </th>
                        <th>
                            NoteFile Title
                        </th>
                        <th>
                            Last Edited
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (NoteFile file in files)
                    {
                        bool current = trackers.SingleOrDefault(p => p.NoteFileId == file.Id) != null;
                        <tr>
                            <td>
                                <SCheckBox fileId="@file.Id" isChecked="@current" />
                            </td>
                            <td>
                                @file.NoteFileName
                            </td>
                            <td>
                                @file.NoteFileTitle
                            </td>
                            <td>
                                @Globals.LocalTimeBlazor(file.LastEdited).ToShortTimeString() @Globals.LocalTimeBlazor(file.LastEdited).ToShortDateString()
                            </td>

                        </tr>
                    }

                </tbody>

            </table>

            <button type="button" @onclick="Cancel" class="btn btn-info btn-sm">Done</button>

        </Authorized>
        <NotAuthorized>
            Access denied!
        </NotAuthorized>
    </AuthorizeView>
}



