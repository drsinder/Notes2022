@using Notes2022.Shared
@using System.Text

@inject HttpClient Http

<SfCheckBox @bind-Checked="isChecked" @onclick="OnClick"></SfCheckBox>

@code {

    [Parameter] public int fileId { get; set; }
    [Parameter] public bool isChecked { get; set; }

    public SCheckModel Model { get; set; }

    protected Sequencer tracker { get; set; }

    protected override void OnParametersSet()
    {
        Model = new SCheckModel
        {
            isChecked = isChecked,
            fileId = fileId
        };
    }

    public async Task OnClick()
    {
        isChecked = !isChecked;

        if (isChecked) // create item
        {
            await Http.PostAsJsonAsync("api/sequencer", Model);
        }
        else // delete it
        {
            await Http.DeleteAsync("api/sequencer/" + fileId);
        }
    }
}
